<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="0dp"
    android:elevation="2dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardPreventCornerOverlap="false"
    android:id="@+id/cardview_group"

    >

    <RelativeLayout
        android:id="@+id/content_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/xml_cardview_background"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="11dp"
        android:layout_marginRight="8dp"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Texto Frase"
        android:id="@+id/id_grupo"
        android:textSize="9sp"
        android:layout_below="@+id/grupo_nombre"
        android:textColor="#e0f2f1"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/imagen_grupo"
        android:layout_toEndOf="@+id/imagen_grupo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Titulo Frase"
        android:id="@+id/grupo_nombre"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/purpura"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/imagen_grupo"
        android:layout_toEndOf="@+id/imagen_grupo" />

    <Button
        android:id="@+id/imagen_grupo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginRight="2dp"
        android:adjustViewBounds="false"
        android:background="@drawable/circle_icon_group"/>

        <Button
            android:id="@+id/imagen_activo"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="0dp"
            android:adjustViewBounds="false"
            android:background="@drawable/circle_ptt_inactive" />

        <Button
            android:id="@+id/chat_no_leido"
            android:layout_width="21dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@+id/imagen_activo"
            android:adjustViewBounds="false"
            android:background="@drawable/ic_chat_no_leido" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_user_ptt"
            android:textSize="8sp"
            android:textColor="@color/purpura"
            android:textStyle="bold"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@+id/chat_no_leido"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>