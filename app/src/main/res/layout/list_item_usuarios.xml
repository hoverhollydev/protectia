<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:paddingTop="12dp"
    android:paddingBottom="7dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Texto Frase"
        android:textSize="11sp"
        android:textColor="@color/white"
        android:id="@+id/descripcion_estado"
        android:layout_below="@+id/usuario_nombre"
        android:layout_toRightOf="@+id/imagen_usuario"
        android:layout_toEndOf="@+id/imagen_usuario" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Titulo Frase"
        android:id="@+id/usuario_nombre"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imagen_usuario"
        android:layout_toEndOf="@+id/imagen_usuario" />

    <ImageView
        android:id="@+id/imagen_usuario"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_alignParentTop="true"
        android:layout_marginRight="4dp"
        android:layout_marginTop="2dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:src="@drawable/icon_user" />

    <ImageView
        android:id="@+id/imagen_estado"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="38dp"
        android:layout_marginTop="12dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:src="@drawable/ic_desconectado" />

    <ImageView
        android:id="@+id/imagen_si_ptt"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignBottom="@+id/imagen_estado"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="12dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:src="@drawable/ptt_off"/>

</RelativeLayout>